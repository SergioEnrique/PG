{% trans_default_domain 'FOSUserBundle' %}

<!doctype html>
<html lang="{{app.request.locale}}">
<head>
    <meta charset="UTF-8">
    <title>{%block title%}PartyGift{%endblock%}</title>
    <link href="{{asset('css/style.css')}}" rel="stylesheet" type="text/css">
    <link href="{{asset('css/animate.css')}}" rel="stylesheet" type="text/css">
    <link href="{{asset('css/jquery.modal.css')}}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="{{asset('js/jquery-1.9.0.min.js')}}"></script>
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script type="text/javascript" src="{{asset('js/jquery.scrollTo-1.4.3.1-min.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/jquery.modal.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/simpleCart.min.js')}}"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.2.1/jquery.form-validator.min.js"></script>
</head>
<body class="body-micuenta">
    <div class="all-wrapper body-micuenta">
        <header>
            <div class="max-wrapper">
                <h1 class="logo">
                    <a href="{{url('pg_party_homepage')}}">
                        <img src="{{asset('img/partygift-logo.png')}}" />
                        <span class="oculto">Party Gift</span>
                    </a>
                </h1>
                
                {% include ':plantillasParciales:cuentaBox.html.twig' %}
            </div>
            <div class="cuenta-info-top">
                <div class="max-wrapper">
                    
                </div>
            </div>
        </header>

        <div class="espacio-header"></div>
        <div class="cuenta-content">
            <div class="max-wrapper">
                <div style="background-color:black; color:white; margin-top:30px; padding:40px; border-radius: 8px 8px 8px 8px;">
                    

                   	
					<div class="container">
						<div class="cuadro img-responsive text-center">
							<br>

							{% for type, messages in app.session.flashbag.all() %}
							    {% for message in messages %}
							        <div class="flash-{{ type }}">
							            {{ message }}
							        </div>
							    {% endfor %}
							{% endfor %}


							<div class="error-formulario">
								{{ form_errors(form) }}
							</div>

							<p style="font-size:14px; font-style:italic; margin-bottom: 10px;" class="text-center">
							Utilice el siguiente formulario para configurar su nueva contraseña<br>
                            Use the form below to set your new password
							</p>

							<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

                                <label for="fos_user_resetting_form[plainPassword][first]">Nueva contraseña / New password: </label>
                                <br>
                                <input type="password" style="width:50%; background-color:white; color:black" class="input_registro_novios" placeholder="(6-20 characters)" id="fos_user_resetting_form_plainPassword_first" name="fos_user_resetting_form[plainPassword][first]" maxlength="20" data-validation="strength" data-validation-strength="2" data-validation="length" data-validation-length="50-200" data-validation-error-msg="Please provide a stronger password.">

                                <br><br>
                
                                <label for="fos_user_resetting_form[plainPassword][second]">Confirmar contraseña / Confirm password</label>
                                <br>
                                <input type="password" style="width:50%; background-color:white; color:black" class="input_registro_novios" placeholder="" id="fos_user_resetting_form_plainPassword_second" name="fos_user_resetting_form[plainPassword][second]" maxlength="20" data-validation="confirmation" data-validation-confirm="fos_user_resetting_form[plainPassword][first]" data-validation-error-msg="Passwords do not match.">

                                {{ form_widget(form._token) }}


							    <div>
							        <input type="submit" class="botoncitoRosa" style="width: 121px; height: 34px; margin-top: 16px;" value="Continue" />
							    </div>
							</form>

							</div>
						</div>
					</div>
							


                </div>
            </div>
        </div>

        {% block footer %}
            {% include ':plantillasParciales:footer.html.twig' %}
        {% endblock %}
    </div>
</div>

{% block modales %}
    {% include ':plantillasParciales:modalErrores.html.twig' %}
{% endblock %}

<script type="text/javascript">
    $.validate({
        modules : 'security'
    });
</script>

</body>
</html>

