{# src/NW/PrincipalBundle/Resources/views/Novios/administrador.html.twig #}

{% extends '::base.html.twig' %}

{% block body %}

	<div class="container" style="padding:0px; margin-top:-30px; box-shadow:rgba(0,0,0,1) 0px 0px 30px;-moz-box-shadow:rgba(0,0,0,1) 0px 0px 30px;-ms-box-shadow:rgba(0,0,0,1) 0px 0px 30px;-o-box-shadow:rgba(0,0,0,1) 0px 0px 30px;-webkit-box-shadow:rgba(0,0,0,1) 0px 0px 30px;">

		{% include ':plantillasParciales:menuGrisSuperior.html.twig' %}

		<div class="container corrector" style="padding-top:50px;">
			<div class="row" style="display: table">
				<div class="col-xs-6 same-height">
					<div class="nw2">
						<a href="{{url('nw_principal_homepage')}}">
							<img class="img-responsive" src="{{asset('img/nw2.png')}}">
						</a>
					</div>
				</div>
				<div class="col-xs-1 same-height">
					<a href="{{ path('fos_user_security_logout') }}" class="text-important salir-link">
						Salir
					</a>
				</div>
				<div class="col-xs-5 text-center same-height">
					<div class="row" style="text-align:right">
						<div class="col-xs-12">
							<h4>Hoy es <span class="esc">{{ today() }}</span></h4>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container" style="padding-top:20px;">
			<div class="row">
				<div class="col-xs-12">
					<h4>Bienvenido administrador</h4>
				</div>
			</div>
		</div>

		<div class="container">
			{% for flashMessage in app.session.flashbag.get('notice') %}
			<div class="row" style="margin-top:30px;">
			    <div class="alert alert-info">
			        {{ flashMessage }}
			    </div>
			</div>
			{% endfor %}
		</div>

		<div class="container"  style="padding-top:30px; padding-left:0px;">
			<div class="row">
				<div class="col-xs-3">

					<nav class="menu_novios">
						<ul>

							<a href="{{path('nw_principal_admin_panel')}}">
								<li style="border-radius:10px 10px 0px 0px;">
									<div class="row" style="margin-left:20px;">
											Solicitudes de Retiro
									</div>
								</li>
							</a>
							<li style="border-radius:0px 0px 10px 10px;">
									<p></p>
							</li>
							
						</ul>
					</nav>

				</div>
				<div class="col-xs-9">
					{% block partederecha %}
					{% endblock %}
				</div>
			</div>
		</div>
	</div>

	{% block modales %}
		{% include 'NWPrincipalBundle:Novios:modalDudas.html.twig' %}
	{% endblock %}

{% endblock %}

{% block footer %}
{% endblock %}