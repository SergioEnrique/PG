		<div class="col-xs-7">
		</div>
		<div class="col-xs-5">
			{{ form_widget(formBuscarArticulo.Buscar, { 'attr': {'class': 'enviar_form', 'style': 'width: 120px;float: right;margin-top:20px;', 'placeholder': '' } }) }}<br>
		</div>
