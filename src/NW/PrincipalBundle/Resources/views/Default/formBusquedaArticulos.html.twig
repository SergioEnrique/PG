<div class="row">
	<div class="caja gris2">
		<p>Encuentra lo que necesitas</p>
		{{ form_start(formBuscarArticulo) }}
		<div class="col-xs-5">
			{{ form_widget(formBuscarArticulo.categorias, { 'attr': {'class': 'form-control input11', 'style': '', 'placeholder': '' } }) }}
