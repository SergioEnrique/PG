<body style="padding: 0; margin: 0; background-color:white; font-family: Arial,Helvetica Neue,Helvetica,sans-serif;">
    <div>
        <div style="padding: 16px;">
            <div style="width:56%; display: inline-block; line-height: 27px;">
                <span style="font-size: 18px; color:#A262A7; text-align: right; width: 100%; margin-top: 48px; margin-bottom: 43px;">party<span style="color:#00B0F0;">message</span></span>
                <br>
                <span style="color:#00B0F0; font-size:10px;">{{today()}}</span>
            </div>
            <div style="width:41%; display: inline-block;">
                <img src="{{app.request.getSchemeAndHttpHost() ~ asset('img/partygift-logo.png')}}" style="width:90%">
            </div>
            <div style="margin-top:30px;">
                <span style="color:rgb(79, 79, 79); font-size:19px;">
            <span style="color:#A262A7; font-size:18px;">{% trans %}Listado de personas para agradecimiento{% endtrans %}</span>
            <table style="width: 100%; margin-top: 27px; border-spacing: 0px;">
                <thead style="background-color: rgb(244, 244, 244);">
                    <tr style="height: 33px;">
                        <th>{% trans %}Nombre{% endtrans %}</th>
                        <th>{% trans %}Artículo{% endtrans %}</th>
                        <th>BucketGift</th>
                        <th>{% trans %}Número de partes{% endtrans %}</th>
                        <th>{% trans %}Monto total regalado{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for regalo in user.cosasRegaladas %}
                        <tr style="height: 33px;">
                            <td>{{regalo.regaladorName}}</td>
                            <td>{{regalo.regalo.regalo}}</td>
                            <td>{{regalo.regalo.bucketGift.titulo}}</td>
                            <td style="text-align:center;">{{regalo.cantidad}}</td>
                            <td style="text-align:right;">${{regalo.amount|number_format(2, '.', ',')}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div style="font-size: 26px; color:#A262A7; text-align: right; width: 100%; margin-top: 48px; margin-bottom: 43px;">the party<span style="color:#00B0F0;">team</span></div>
            </div>
        </div>
        <div style="padding: 20px; color: black; font-size: 12px; background-color:rgba(48, 48, 48, .3);">
            <p>{% trans %}Partygift y su logotipo son marcas registradas.{% endtrans %}</p>
        </div>
    </div>
</body>